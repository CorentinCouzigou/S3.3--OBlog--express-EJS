<%- include ('partials/header') %>
          <article class="post pure-u-1">
            <header>
              <h1><%= articles.title %></h1>
              <div class="post-meta">
                Par <a href="#"><%= articles.author %></a> 
                dans la catégorie <a href="#"><%= articles.category %></a>
              </div>
            </header>
            <figure class="post-picture">
              <img class="pure-img" src="/images/<%= articles.img %>" alt="<%= artciles.image_alt %>">
              <figcaption class="post-picture-caption"><%= artciles.sub_title %></figcaption>
            </figure>
            <div class="post-content">
              <p><%= artciles.text %></p>
            </div>
            <footer>
              <a class="pure-button" href="/">Retour à l'accueil</a>
            </footer>
          </article>
<%- include('partials/footer') %>
